{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  	max-width: 87rem;
	  margin: 0 auto;
	  border-bottom: 1px solid #000;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-margin">
  <h2 class="{{ section.settings.content_alignment }}">{{ section.settings.dummy-header | escape }}</h2>
  <p class="{{ section.settings.content_alignment }}">
    {{ section.settings.text2 | escape }}
  </p>
</div>

{% schema %}
  {
    "name": "Custom dummy2",
    "settings": [
      {
        "type": "text",
        "id": "dummy-header",
        "default": "DummyHeader",
        "label": "Header"
      },
      {
        "type": "text",
        "id": "text2",
        "default": "Dummy",
        "label": "TextLabel"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "margin-top",
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "margin-bottom",
        "default": 0
      },
      {
        "type": "select",
        "id": "content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
          "default": "center",
          "label": "Center"
      }
    ],
    "presets": [
      {
      "name": "Custom dummy2"
      }
    ]
  }
{% endschema %}

